{
  "fit": {
    "experiments": 1,
    "steps": 100000,
    "burnin_fraction": 0.2,
    "signal_name": "zeronu",
    "output_file": "fit_example",
    "debug_mode": false,
    "signals": [
      "zeronu", "b8", "twonu"
    ],
    "observables": ["energy"],
    "cuts": ["radius"],
    "systematics": []
  },

  "experiment": {
    "live_time": 1.0,
    "confidence": 0.9
  },

  "pdfs": {
    "hdf5_fields": [
      "x",    "y",    "z",    "r",    "e",
      "mc_x", "mc_y", "mc_z", "mc_r", "mc_e",
      "ut_d", "ut_s", "ut_ns"
    ],
    "observables": {
      "energy": {
        "title": "Reconstructed energy (MeV)",
        "units": "MeV",
        "field": "e",
        "bins": 45,
        "min": 1.4,
        "max": 5.0
      },
      "radius": {
        "title": "Reconstructed radius (mm)",
        "units": "mm",
        "field": "r",
        "bins": 12,
        "min": 0.0,
        "max": 3500.0
      }
    },
    "systematics": {
      "energy_resolution": {
        "title": "Energy resolution (keV)",
        "type": "scale",
        "observable_field": "e",
        "true_field": "e_mc",
        "mean": 0.01,
        "sigma": 0.01,
        "fixed": false
      },
      "energy_shift": {
        "title": "Energy shift (keV)",
        "type": "shift",
        "observable_field": "e",
        "mean": 0.01,
        "sigma": 0.0,
        "fixed": false
      }
    }
  },
  "signals": {
    "zeronu": {
      "title": "0#nu#beta#beta",
      "files": ["/path/to/zeronu.hdf5"],
      "rate": 0.0
    },
    "twonu": {
      "title": "2#nu#beta#beta",
      "files": ["/path/to/twonu.hdf5"],
      "rate": 3.7e6,  // NEMO-3
      "constraint": 4.44e5  // 12% NEMO-3
    },
    "b8": {
      "title": "^{8}B #nu ES",
      "files": ["/path/to/b8.hdf5"],
      "rate": 1236.7,  // SNO
      "constraint": 37.1  // 3% SNO
    }
  }
}

